@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Campus Connect</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
            background: #FFFF;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .login-container {
            background: #1a1f35;
            border-radius: 24px;
            padding: 48px 40px;
            max-width: 420px;
            width: 100%;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.5);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .logo-section {
            text-align: center;
            margin: 0 auto 32px;
            max-width: 260px;
            width: 100%;
            height: auto;
            filter: drop-shadow(0 12px 30px rgba(30,136,255,.25));
        }

        .logo-image {
            display: block;
            width: 200px; /* adjust the  */
            max-width: 100%;
            height: auto;
            margin: 0 auto 8px;
        }

        .logo-title {
            font-size: 42px;
            font-weight: 700;
            color: #4a9eff;
            margin-bottom: 8px;
            letter-spacing: 1px;
        }

        .logo-subtitle {
            color: #8b92a8;
            font-size: 14px;
            margin-top: 12px;
        }

        .form-group {
            margin-bottom: 24px;
        }

        label {
            display: block;
            color: #e0e3ed;
            font-size: 14px;
            font-weight: 500;
            margin-bottom: 8px;
        }

        input[type="email"],
        input[type="password"],
        input[type="text"] {
            width: 100%;
            padding: 14px 16px;
            background: #0f1419;
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 8px;
            color: #e0e3ed;
            font-size: 15px;
            transition: all 0.3s ease;
        }

            input[type="email"]:focus,
            input[type="password"]:focus,
            input[type="text"]:focus {
                outline: none;
                border-color: #4a9eff;
                background: #161b26;
            }

        input::placeholder {
            color: #5a6170;
        }

        .remember-forgot {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 28px;
        }

        .checkbox-wrapper {
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .checkbox-wrapper input[type="checkbox"] {
                width: 18px;
                height: 18px;
                cursor: pointer;
            }

            .checkbox-wrapper label {
                margin: 0;
                font-size: 14px;
                color: #e0e3ed;
                cursor: pointer;
            }

        .forgot-link {
            color: #4a9eff;
            text-decoration: none;
            font-size: 14px;
            transition: color 0.3s ease;
        }

            .forgot-link:hover {
                color: #6bb0ff;
            }

        .btn-signin {
            width: 100%;
            padding: 16px;
            background: #4a9eff;
            color: #fff;
            border: none;
            border-radius: 12px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

            .btn-signin:hover {
                background: #3d8eeb;
                transform: translateY(-2px);
                box-shadow: 0 8px 20px rgba(74, 158, 255, 0.3);
            }

            .btn-signin:active {
                transform: translateY(0);
            }

        .footer-links {
            text-align: center;
            margin-top: 32px;
            padding-top: 24px;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
        }

        .footer-text {
            color: #8b92a8;
            font-size: 13px;
        }

        .footer-links a {
            color: #8b92a8;
            text-decoration: none;
            font-size: 13px;
            margin: 0 12px;
            transition: color 0.3s ease;
        }

            .footer-links a:hover {
                color: #4a9eff;
            }

        .text-danger {
            color: #ff6b6b;
            font-size: 13px;
            margin-top: 6px;
            display: block;
        }

        .validation-summary {
            background: rgba(255, 107, 107, 0.1);
            border: 1px solid rgba(255, 107, 107, 0.3);
            border-radius: 8px;
            padding: 12px 16px;
            margin-bottom: 20px;
        }

            .validation-summary ul {
                list-style: none;
                margin: 0;
                padding: 0;
            }

            .validation-summary li {
                color: #ff6b6b;
                font-size: 14px;
            }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="logo-section">
            <img src="@(Url.Content("~/images/campus-connect-logo.png"))" alt="Campus Connect Logo" class="logo-image" loading="lazy" />
            <p class="logo-subtitle">Smart Request for a Smarter Campus</p>
        </div>

        <form id="account" method="post">
            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div asp-validation-summary="ModelOnly" class="validation-summary" role="alert"></div>
            }

            <div class="form-group">
                <label asp-for="Input.Email">Email address</label>
                <input asp-for="Input.Email" type="email" autocomplete="username" aria-required="true" placeholder="student@jacksonville.edu" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Input.Password">Password</label>
                <input asp-for="Input.Password" type="password" autocomplete="current-password" aria-required="true" placeholder="••••••••" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="remember-forgot">
                <div class="checkbox-wrapper">
                    <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" id="rememberMe" />
                    <label asp-for="Input.RememberMe" for="rememberMe">Remember me</label>
                </div>
                <a class="forgot-link" asp-page="./ForgotPassword">Forgot password?</a>
            </div>

            <button id="login-submit" type="submit" class="btn-signin">Sign In</button>

            <div class="footer-links">
                <div class="footer-text">
                    © @DateTime.Now.Year Campus Connect
                    <br />
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a>
                    <span style="color: #5a6170;">|</span>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend Confirmation</a>
                </div>
            </div>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>