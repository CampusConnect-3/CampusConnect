@page
@model CampusConnect.Pages.RequestPages.CreateModel

@{
    ViewData["Title"] = "Submit New Request";
}

<style>
    .submit-shell {
        max-width: 1100px;
        margin: 18px auto;
        padding: 18px;
    }

    .breadcrumb {
        color: #666;
        font-size: 14px;
        margin-bottom: 8px;
    }

    .submit-title {
        font-size: 28px;
        margin-bottom: 6px;
    }

    .submit-desc {
        color: #555;
        margin-bottom: 18px;
    }

    .form-card {
        border: 4px solid #000;
        padding: 18px;
        background: #fff;
    }

    .form-top {
        display: flex;
        justify-content: space-between;
        border-bottom: 2px solid #111;
        padding-bottom: 12px;
        margin-bottom: 16px;
    }

    .form-top .person {
        font-weight: 600;
        font-size: 16px;
    }

    .form-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 28px;
    }

    .field {
        margin-bottom: 14px;
    }

    .field label {
        display: block;
        font-weight: 600;
        margin-bottom: 6px;
    }

    .field input[type="text"],
    .field input[type="email"],
    .field input[type="tel"],
    .field select,
    .field textarea {
        width: 100%;
        padding: 10px;
        background: #eee;
        border: 1px solid #ccc;
        box-sizing: border-box;
    }

    .field textarea {
        min-height: 80px;
        resize: vertical;
    }

    .required-asterisk {
        color: #c00;
        margin-left: 6px;
    }

    .attachments {
        display: flex;
        align-items: center;
        gap: 12px;
    }

    .submit-row {
        display: flex;
        justify-content: flex-end;
        margin-top: 18px;
    }

    .btn-submit {
        background: #0b5ed7;
        color: #fff;
        padding: 12px 26px;
        border: none;
        font-size: 16px;
        cursor: pointer;
    }

    @@media (max-width: 768px) {
        .form-grid {
            grid-template-columns: 1fr;
        }
    }
</style>

<div class="submit-shell">
    <div class="breadcrumb">
        <a asp-page="/Index">Home</a> / Submit Request
    </div>

    <h1 class="submit-title">Submit New Request</h1>
    <div class="submit-desc">please fill out the form below to submit a new service request. Provide as much details as possible so we can assist you effectively</div>

    <div class="form-card">
        <div class="form-top">
            <div class="person">Name: @User.Identity?.Name</div>
            <div class="person">Student ID: @User.FindFirst("student_id")?.Value</div>
        </div>

        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-grid">
                <div>
                    <div class="field">
                        <label asp-for="request.title">Subject <span class="required-asterisk">*</span></label>
                        <input asp-for="request.title" />
                        <span asp-validation-for="request.title" class="text-danger"></span>
                    </div>

                    <div class="field">
                        <label asp-for="request.buildingName">Location (Building) <span class="required-asterisk">*</span></label>
                        <input asp-for="request.buildingName" />
                        <span asp-validation-for="request.buildingName" class="text-danger"></span>
                    </div>

                    <div class="field">
                        <label asp-for="request.phoneNumber">Phone Number</label>
                        <input asp-for="request.phoneNumber" />
                        <span asp-validation-for="request.phoneNumber" class="text-danger"></span>
                    </div>

                    <div class="field">
                        <label asp-for="request.description">Description <span class="required-asterisk">*</span></label>
                        <textarea asp-for="request.description"></textarea>
                        <span asp-validation-for="request.description" class="text-danger"></span>
                    </div>

                    <div class="field">
                        <label>Attachments (png, jpg, pdf)</label>
                        <div class="attachments">
                            <input type="file" name="attachments" accept=".png,.jpg,.jpeg,.pdf" />
                        </div>
                    </div>
                </div>

                <div>
                    <div class="field">
                        <label asp-for="request.priority">Priority <span class="required-asterisk">*</span></label>
                        <select asp-for="request.priority" asp-items="ViewBag.priority"></select>
                        <span asp-validation-for="request.priority" class="text-danger"></span>
                    </div>

                    <div class="field">
                        <label asp-for="request.roomNumber">Location (Room) <span class="required-asterisk">*</span></label>
                        <input asp-for="request.roomNumber" />
                        <span asp-validation-for="request.roomNumber" class="text-danger"></span>
                    </div>

                    <div class="field">
                        <label asp-for="request.email">Email Address <span class="required-asterisk">*</span></label>
                        <input asp-for="request.email" type="email" />
                        <span asp-validation-for="request.email" class="text-danger"></span>
                    </div>

                    <div class="field">
                        <label asp-for="request.categoryID">Category</label>
                        <select asp-for="request.categoryID" class="form-control" asp-items="ViewBag.categoryID"></select>
                        <span asp-validation-for="request.categoryID" class="text-danger"></span>
                    </div>

                    <div class="field">
                        <label asp-for="request.statusID">Status</label>
                        <select asp-for="request.statusID" asp-items="ViewBag.statusID"></select>
                        <span asp-validation-for="request.statusID" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="submit-row">
                <button type="submit" class="btn-submit">Submit Request</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
