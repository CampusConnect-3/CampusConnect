@page
@model CampusConnect.Pages.RequestAttachmentsPages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>attachments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="attachments.requestID" class="control-label"></label>
                <select asp-for="attachments.requestID" class ="form-control" asp-items="ViewBag.requestID" ></select>
            </div>
            <div class="form-group">
                <label asp-for="attachments.creatorID" class="control-label"></label>
                <select asp-for="attachments.creatorID" class ="form-control" asp-items="ViewBag.creatorID" ></select>
            </div>
            <div class="form-group">
                <label asp-for="attachments.fileName" class="control-label"></label>
                <input asp-for="attachments.fileName" class="form-control" />
                <span asp-validation-for="attachments.fileName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="attachments.contentType" class="control-label"></label>
                <input asp-for="attachments.contentType" class="form-control" />
                <span asp-validation-for="attachments.contentType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <span class="text-danger">*</span>
                <label asp-for="attachments.fileUrl" class="control-label"></label>
                <input asp-for="attachments.fileUrl" class="form-control" aria-required="true"/>
                <span asp-validation-for="attachments.fileUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="attachments.uploadedAt" class="control-label"></label>
                <input asp-for="attachments.uploadedAt" class="form-control" />
                <span asp-validation-for="attachments.uploadedAt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
